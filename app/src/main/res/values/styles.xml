<resources>
    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:headerTimeTextAppearance">@style/CustomTimePickerHeaderText</item>
        <item name="android:numbersTextColor">@color/white</item>
    </style>

    <style name="CustomTimePickerHeaderText" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>
</resources>